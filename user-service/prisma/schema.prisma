generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}


model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  no_telp  BigInt?
  nik      BigInt?
  nip      BigInt?
  role_id  Int
  role     Role     @relation(fields: [role_id], references: [id])
  sup_id   Int
  uptd_id  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Role {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  users User[]
}
