generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model UserRole {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userDetails UserDetail[]
}

model UserDetail {
  user_id Int @id
  role_id Int
  is_active Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user_role UserRole @relation(fields: [role_id], references: [id])
}

model DataUmum {
  id        Int          @id @default(autoincrement())
  pemda     String
  opd       String
  nm_paket   String
  no_kontrak String
  tgl_kontrak DateTime @db.Date
  no_spmk   String
  tgl_spmk   DateTime @db.Date
  kategori_paket String
  uptd_id  Int
  ppk_kegiatan String
  thn Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt 
  

  dataUmumDetails DataUmumDetail?

  laporanMingguans LaporanMingguan[]

  fileDokumens FileDokumen[]
}

model DataUmumDetail {
  id        Int      @id @default(autoincrement())
  data_umum_id String 
  tgl_adendum DateTime? @db.Date
  nilai_kontrak String
  panjang_km Float
  lama_waktu Int
  kontraktor_id Int
  konsultan_id Int
  ppk_id Int
  is_active Boolean @default(true)
  keterangan String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  data_umum DataUmum @relation(fields: [data_umum_id], references: [id])
  dataUmumRuas DataUmumRuas[]
  jaduals Jadual[]
  kontraktor Kontraktor @relation(fields: [kontraktor_id], references: [id])
  konsultan Konsultan @relation(fields: [konsultan_id], references: [id])

}


model DataUmumRuas {
  id        Int      @id @default(autoincrement())
  data_umum_detail_id Int 
  ruas_id Int
  segment_jalan String
  lat_awal Float
  long_awal Float
  lat_akhir Float
  long_akhir Float
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  data_umum_detail DataUmumDetail @relation(fields: [data_umum_detail_id], references: [id])
}


model Kontraktor {
  id        Int      @id @default(autoincrement())
  nama      String   @unique
  alamat    String
  npwp      String   @unique
  nama_direktur String
  email    String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}


model Konsultan {
  id        Int      @id @default(autoincrement())
  nama      String   @unique
  alamat    String
  npwp      String   @unique
  nama_direktur String
  email    String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Jadual{
  id        Int      @id @default(autoincrement())
  data_umum_detail_id Int
  nmp String
  uraian_pekerjaan String
  total_harga String
  total_volume String
  satuan String
  bobot Float
  koefisien Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  data_umum_detail DataUmumDetail @relation(fields: [data_umum_detail_id], references: [id])

  jadualDetails JadualDetail[]
}

model JadualDetail{
  id        Int      @id @default(autoincrement())
  jadual_id Int
  uraian_pekerjaan String
  volume String
  satuan String
  harga_satuan String
  total_harga String
  tanggal DateTime
  nilai String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  jadual Jadual @relation(fields: [jadual_id], references: [id])
}


model LaporanMingguan{
  id        Int      @id @default(autoincrement())
  data_umum_id String
  rencana_pekerjaan String
  realisasi_pekerjaan String
  deviasi String
  priode String
  file_laporan String
  keterangan String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt


  data_umum DataUmum @relation(fields: [data_umum_id], references: [id])
}


model FileDokumen{
  id        Int      @id @default(autoincrement())
  data_umum_id String
  nama_dokumen String
  file_path String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  data_umum DataUmum @relation(fields: [data_umum_id], references: [id])
}
